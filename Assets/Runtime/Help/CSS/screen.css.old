html {
max-width: 900px;
font-family: "Verdana";
background-color: #fffff0;
font-size: 16px;
}
h2, h3, h4, h5, h6 {
color: #186119;
font-family: "Tahoma";
}
h1 {
background-color: #e6e6fa;
padding:10px;
font-family: "APL385 Unicode";
font-size: 24px;
margin-left: 10px;
}
h2 {
font-size: 20px;
margin: 1em 0 0 10px;	
}
h3 {
font-size: 18px;
margin: 1em 0 0 10px;
}
h4 {
font-size: 16px;
margin: 1em 0 0 10px;
}
h5 {
font-size: 15px;
margin: 1em 0 0 10px;
}
p {
margin: 0.5em 10px;
}
a.also {
font-family: "APL385 Unicode";
font-size: 16px;
font-weight: 600;
color: Brown;
}
pre.code {
font-family: "APL385 Unicode";
font-size: 16px;
background-color: #e8e8e8;
padding: 0.4em;
margin:  0.5em;
}
p.info {
font-weight: normal;
margin-top: 0;
}
p.prefix {
font-size: xx-small;
margin-bottom: 0;
}
div#container {
background-color: #fdf5e6;
padding-top: 3px;
padding-bottom:10px;
padding-right: 10px;
padding-left: 10px;
margin-left: 10px;
}
table {
background-color: #ffe4c4;
border: solid 1px silver;
border-collapse: collapse;
}
td {
padding: .5em 1em;
border: solid 1px silver;
}
td.one {
width: 2em;
}
td.two {
width: 25em;
}
td.three {
width: 25em;
}
span.bold {
font-weight: bold;
}
td.tb1 {
font-weight: bold;
border: solid 1px silver;
border-collapse: collapse;
}
table > caption {
font-size: 16px;
padding-bottom: 2px;
}
tr.odd {
background-color: #F5F5F5;
}
div.tabdat {
margin-top: 1.5em;
margin-bottom: 1.5em;
}
div.tabdat table {
margin-left: 10px;
background-color: #EAEAEA;
}
div.tabdat td {
font-size: 15px;
padding: 0.2em 0.5em;
}
div.tabdat p {
margin: 0 0 5px 10px;
font-weight: bold;
}
ul {
margin-top: 0;
}
li {
margin-top: 8px;
}
col.c_001 {width: 20em;}
col.c_002 {width: 50em;}
col.c_003 {width: 20em;}
span.code {
font-family: "APL385 Unicode";
padding-left: .25em;
padding-right: .25em;
background-color: #e8e8e8;
white-space: nowrap;
}
.glossy {
border-bottom: 1px dotted gray;
}
.tooltip {
font-size: 1.2em;
background-color: #FFFFCE;
margin: 0;
padding: 0;
}
span.apl {
font-family: "APL385 Unicode";
font-size: 16px;
font-weight: 600;
color: maroon;
}
span.aplheader {
font-family: "APL385 Unicode";
font-size: 16px;
font-weight: 600;
color: Black;
}
span.apl > a {
color: Brown;
}
display:block;
position:absolute;
font-family: Verdana;
font-size:12px;
top:2em; left:-10em; width: 15em;
border:1px solid Black;
background-color:#ffffbb;
padding: 6px 4px;}

table#childlinks {
margin: 5px 0 0 25px;
background-color: transparent;
border: none;
}
table#childlinks td {
border: none;
padding: 5px 0;
}
div.namevaluelist {
margin-top: 1.5em;
margin-bottom: 1.5em;
}
div.namevaluelist table { 
margin:0 0 0 0.5em;
margin-right: 50px;
background-color: transparent;
border: 1px silver solid;
}
div.namevaluelist td, th {
font-size: 15px;
padding: 0.5em 1em;
border:0;
vertical-align:top;
}
div.namevaluelist th {
text-align: left;
font-weight: bold;
}
span.invalidlink {
color:red;
font-weight:bold;
}
image {
display:block;
margin:10px;
}
